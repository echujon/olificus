---
pagination:
  data: collections.comic
  size: 1
  reverse: true
---
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Olificus</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @font-face {
            font-family: 'Comic Neue';
            src: url('/fonts/ComicNeue-Regular.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Comic Neue', system-ui, -apple-system, sans-serif;
        }
        .image-wrapper {
            position: relative;
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .image-wrapper img {
            width: 100%;
            height: auto;
            display: block;
        }

        /* Apply max-width only on wider screens (desktop) */
        @media (min-width: 768px) {
            .image-wrapper img {
                max-width: 800px;
            }

            .overlay-text {
                max-width: 800px;
            }
        }

        .overlay-text {
            position: absolute;
            left: 0;
            right: 0;
            margin: 0 auto;
            text-align: center;
            color: white;
            font-size: 2rem;
            font-weight: bold;
            text-shadow: 0 0 5px black;
            pointer-events: none;
            width: 100%;
            padding: 0 1rem;
            box-sizing: border-box;
        }

        /* Top text specific */
        .overlay-text.top {
            top: 10px;
            font-size: clamp(2rem, 10vw, 6rem);
        }

        /* Bottom text specific */
        .overlay-text.bottom {
            bottom: 10px;
            font-size: clamp(1rem, 8vw, 4rem);
        }

        /* Comic preview section */
        .comic-preview {
            max-width: 500px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .comic-preview a {
            display: block;
            text-decoration: none;
            color: inherit;
            transition: transform 0.2s;
        }

        .comic-preview a:hover {
            transform: scale(1.02);
        }

        .comic-preview img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .comic-preview h2 {
            text-align: center;
            margin-bottom: 1rem;
            margin-top: 0;
            font-size: 1.5rem;
        }

        .new-badge {
            background-color: #ff4444;
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            margin-left: 0.5rem;
        }
    </style>
</head>
<body>
{% include "navbar.njk" %}

{% set latestComic = pagination.items[0] %}
{% if latestComic %}
<div class="comic-preview">
    <a href="{{ latestComic.url }}">
        <h2>
            {{ latestComic.data.title }}
            <span class="new-badge">New!</span>
        </h2>
        {% if latestComic.data.preview_image %}
            <img src="{{ latestComic.data.preview_image }}" alt="{{ latestComic.data.title }}">
        {% else %}
            {% set firstImage = latestComic.content | extractFirstImage %}
            <img src="{{ firstImage }}" alt="{{ latestComic.data.title }}">
        {% endif %}
    </a>
</div>
{% endif %}
{% include "footer.njk" %}
</body>
</html>
# Cache control for HTML pages - check for updates in background
/comic/*
  Cache-Control: public, s-maxage=60, stale-while-revalidate=86400

/*
  Cache-Control: public, s-maxage=60, stale-while-revalidate=86400

# Longer cache for static assets (images, fonts)
/images/*
  Cache-Control: public, max-age=31536000, immutable

/fonts/*
  Cache-Control: public, max-age=31536000, immutable
